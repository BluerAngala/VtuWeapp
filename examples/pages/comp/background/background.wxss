.color_title{
    width: 100%;
    height: 30px;
    line-height: 30px;
    font-size: 12px;
    margin-bottom: 10px;
}
.color_span{
    width: 100%;
    display: inline-block;
    text-align: center;
}
.color_span_li{
    width: calc(33.333% - 20px);
    color: #fff;
    margin: 0px 10px 10px 10px;
    text-align: center;
    display: inline-block;
}
.color_span_li_name{
    padding: 0px 10px;
    width: calc(100% - 20px);
    height: 30px;
    line-height: 30px;
    font-size: 14px;
}
.color_span_li_color{
    padding: 0px 10px;
