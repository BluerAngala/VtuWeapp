<view class="container">
  <vtu-navbar title="Badge"></vtu-navbar>
  <view class="center Page_Margin">

    <vtu-panel v-class="panel" title="基础用法" >
      <view class="Badge_Btn">
        <vtu-badge value="15" user-slot>
          <vtu-avatar src="https://activity.vtuzx.com/doc/vtuUI/weapp/avatar/3.png" circle size="small"></vtu-avatar>
        </vtu-badge>
      </view>
      <view class="Badge_Btn">
        <vtu-badge value="hot" bg-color="orange" user-slot>
          <vtu-btn>自定义颜色</vtu-btn>
        </vtu-badge>
      </view>
      <view class="Badge_Btn">
        <vtu-avatar src="https://activity.vtuzx.com/doc/vtuUI/weapp/avatar/1.png" circle size="small">
          <vtu-badge value="5" shape="circle"></vtu-badge>
        </vtu-avatar>
      </view>
    </vtu-panel>

    <vtu-panel v-class="panel" title="最大值(适用于数字)">
      <view class="Badge_Btn">
        <vtu-badge value="15" max="10" user-slot>
          <vtu-btn>最大10</vtu-btn>
        </vtu-badge>
      </view>
      <view class="Badge_Btn">
        <vtu-badge value="105" max="99" user-slot>
          <vtu-btn>最大99</vtu-btn>
        </vtu-badge>
      </view>
    </vtu-panel>

    <vtu-panel v-class="panel" title="小红点">
      <view class="Badge_Btn">
        <vtu-badge is-dot="true" user-slot>
          <vtu-btn>按钮</vtu-btn>
        </vtu-badge>
      </view>
      <view class="Badge_Btn">
        <vtu-badge is-dot="true" user-slot>
          <vtu-avatar src="https://activity.vtuzx.com/doc/vtuUI/weapp/avatar/1.png" circle size="small"></vtu-avatar>
        </vtu-badge>
      </view>
    </vtu-panel>
  </view>
</view>
