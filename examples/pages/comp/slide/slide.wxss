.title{
  height: 30px;
  line-height: 30px;
  font-size: 12px;
}

.left {
  background-color: white;
  height: 100%;
  width: 100%;
}
.left .avatar{
  margin: 10px;
  float: left;
}
.left .info{
  width: calc(100% - 70px);
  float: left;
  height: 50px;
  margin: 10px 0 0 0;
}
.left .info .name{
  width: 100%;
  height: 25px;
  font-size: 16px;
}
.left .info .content{
  width: 100%;
  height: 15px;
  font-size: 12px;
  color: var(--font-hc);
}

.right {
  height: 100%;
  color: #fff;
  display: flex;
  font-size: 14px;
}
.right .top{
  width: 70px;
  height: 100%;
  line-height: 60px;
  background: var(--font-hd);
  text-align: center;
}
.right .read{
  width: 100px;
  height: 100%;
  line-height: 60px;
  background: var(--primary);
  text-align: center;
}
.right .delete{
  width: 70px;
  height: 100%;
  line-height: 60px;
  background: var(--danger);
  text-align: center;
}
