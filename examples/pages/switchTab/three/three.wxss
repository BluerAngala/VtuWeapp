.MyTop{
    width: 100%;
    background-image: linear-gradient(180deg, transparent 0%, rgb(255,255,255) 60%);
    margin-bottom: 20px;
}
.LogoClass{
    margin: 60px auto 10px auto;
}
.MyTop-name{
    width: 100%;
    height: 40px;
    line-height: 40px;
    text-align: center ;
    font-size: 20px;
}
.MyTop-desc{
    width: 100%;
    height: 25px;
    line-height: 25px;
    text-align: center ;
    font-size: 12px;
    color: var(--font-hc);
}
.MyTop-data{
    width: 100%;
    height: 80px;
    margin-top: 40px;
}
.MyTop-data-col{
    text-align: center;
}
.MyTop-data-col .number{
    height: 45px;
    line-height: 55px;
    font-size: 20px;
}
.MyTop-data-col .number.view{
    color: #ed3e41;
}
.MyTop-data-col .number.star{
    color: #3286c6;
}
.MyTop-data-col .number.fork{
    color: #0fb730;
}
.MyTop-data-col .label{
    line-height: 25px;
    font-size: 14px;
    color: var(--font-hb);
}
