.minipg{
    width: calc(100% - 40px);
    margin: 0 10px 20px 10px;
    padding: 10px 10px 0 10px;
    background: #fff;
    border-radius: 10px;
}
.minipg-hover{
    background: var(--bg-page);
}
.minipg-logo{
    width: 100%;
    height: 30px;
    line-height: 30px;
    display: flex;
}
.minipg-logo-icon{
    width: 20px;
    height: 20px;
    margin: 5px;
}
.minipg-logo-icon image{
    width: 100%;
    height: 100%;
    border-radius: 100px;
}
.minipg-logo-label{
    margin-left: 10px;
    font-size: 14px;
    margin-bottom: 10px;
    color: var(--font-hb);
}
.minipg-name{
    text-align: left;
    margin: 10px 0 20px 0;
    font-size: 16px;
}
.minipg-img{
    width: 100%;
    text-align: left;
}
.minipg-img image{
    width: 100%;
    -webkit-border-radius: 5px;
    -moz-border-radius: 5px;
    border-radius: 5px;
}
.minipg-footer{
    width: 100%;
    height: 30px;
    line-height: 30px;
    font-size: 12px;
    border-top: 1px solid var(--border-bd);
    margin-top: 10px;
    color: var(--font-hc);
}
.minipg-footer i{
    width: 30px;
    height: 30px;
    text-align: center;
    color: var(--mauve);
    font-size: 14px;
    margin-right: 10px;
}
